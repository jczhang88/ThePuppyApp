<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playdates_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/textViewPlaydatesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:text="Event Name" />

    <TextView
        android:id="@+id/textViewPlaydatesLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPlaydatesName"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:text="Location" />

    <TextView
        android:id="@+id/textViewPlaydatesDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPlaydatesLocation"
        android:layout_marginLeft="50dp"
        android:text="Date" />

    <TextView
        android:id="@+id/textViewPlaydatesDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPlaydatesDate"
        android:layout_marginLeft="50dp"
        android:text="Description" />

</RelativeLayout>