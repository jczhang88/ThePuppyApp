<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewMyEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:text="" />

    <TextView
        android:id="@+id/textViewMyEventLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMyEventName"
        android:layout_marginLeft="100dp"
        android:text="" />

    <TextView
        android:id="@+id/textViewMyEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMyEventLocation"
        android:layout_marginLeft="100dp"
        android:text="" />

    <TextView
        android:id="@+id/textViewMyEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMyEventDate"
        android:layout_marginLeft="100dp"
        android:text="" />
</RelativeLayout>