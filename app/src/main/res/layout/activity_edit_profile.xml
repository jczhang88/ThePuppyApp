<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <Button
        android:id="@+id/buttonSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editTextDisplayName"
        android:layout_marginBottom="137dp"
        android:text="Select Image" />

    <Button
        android:id="@+id/buttonUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSelectImage"
        android:layout_toEndOf="@+id/editTextDisplayName"
        android:text="Upload Image" />

    <ImageView
        android:id="@+id/imageViewProfilePicture"
        android:layout_width="157dp"
        android:layout_height="123dp"
        android:layout_above="@+id/editTextDisplayName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-179dp"
        android:src="@drawable/woman" />

    <EditText
        android:id="@+id/editTextDisplayName"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="201dp"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonEditName"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextDisplayName"
        android:layout_toEndOf="@+id/editTextDisplayName"
        android:text="Edit Name" />

    <Button
        android:id="@+id/buttonAddPuppy"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonSelectImage"
        android:layout_marginBottom="73dp"
        android:text="Add a Puppy" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText3"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter occupation"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:ems="10"
        android:hint="Enter location"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editText2"
        android:ems="10"
        android:hint="Tell us a little about you and your pups!"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Edit Profile"
        android:textSize="30sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/button"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignTop="@+id/buttonAddPuppy"
        android:text="Update Profile" />

</RelativeLayout>