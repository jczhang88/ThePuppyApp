<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/textViewHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="The Puppy App"
        android:textSize="30sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textViewBarkBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewPlaydates"
        android:layout_marginEnd="23dp"
        android:text="The Bark Board"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textViewFetch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButtonPlaydates"
        android:layout_marginStart="73dp"
        android:text="Fetch!"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textViewPlaydates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonPlaydates"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-103dp"
        android:layout_marginStart="27dp"
        android:text="Puppy Playdates"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textViewMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewFetch"
        android:layout_marginEnd="76dp"
        android:text="Map"
        android:textSize="20sp"
        android:typeface="serif" />

    <ImageButton
        android:id="@+id/imageButtonPlaydates"
        android:layout_width="193dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="117dp"
        android:src="@drawable/playdates" />

    <ImageButton
        android:id="@+id/imageButtonFetch"
        android:layout_width="190dp"
        android:layout_height="191dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/fetch" />

    <ImageButton
        android:id="@+id/imageButtonMap"
        android:layout_width="183dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/map" />

    <ImageButton
        android:id="@+id/imageButtonBarkBoard"
        android:layout_width="183dp"
        android:layout_height="178dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewBarkBoard"
        android:layout_marginTop="15dp"
        android:src="@drawable/bark" />

</RelativeLayout>