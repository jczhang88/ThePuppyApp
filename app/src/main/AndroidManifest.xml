<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jeffrey_zhang.thepuppyapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ThePuppyApp"
            android:theme="@style/PuppyAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyProfile"
            android:label="@string/title_activity_my_profile" />
        <activity
            android:name=".PuppyProfile"
            android:label="@string/title_activity_puppy_profile" />
        <activity
            android:name=".BrowseDoggies"
            android:label="@string/title_activity_browse_doggies" />
        <activity
            android:name=".BarkBoard"
            android:label="@string/title_activity_bark_board" />
        <activity android:name=".PuppyPlaydates" />
        <activity android:name=".Map" />
        <activity android:name=".MyEvents" />
        <activity android:name=".Register" />
        <activity android:name=".HomePage" />
        <activity android:name=".CreateEvents" />
        <activity android:name=".EditProfile" />
        <activity android:name=".AddPuppy"></activity>
    </application>

</manifest>